	<gd_rule rule_name="Named Gold Key" base_chance="100" no_reduction="true" member_limit="6">
		<gd_maps>
			<gd_map map_id="300140000" name="Krotan_Chamber" />
		</gd_maps>
		<gd_npcs>
			<gd_npc npc_id="215136" name="Awakened Krotan Lord" />
		</gd_npcs>
		<gd_items>
			<gd_item id="185000060" name="Krotan Gold Room Key" />
